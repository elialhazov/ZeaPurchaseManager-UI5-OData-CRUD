<mvc:View controllerName="zeaproject.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page id="detailPage"
          title="PO Item Details"
          showNavButton="true"
          navButtonPress=".onNavBack">

        <headerContent>
            <Button text="Create Item" icon="sap-icon://add" press=".onCreatePress"/>
            <Button text="Edit Item" icon="sap-icon://edit" press=".onEditPress"/>
        </headerContent>

        <content>

            <!-- HEADER -->
            <VBox class="detailCard">
                <HBox class="detailRow">
                    <Text class="detailLabel" text="PO Number:"/>
                    <Text class="detailValue" text="{PoNumber}"/>
                </HBox>
            </VBox>

            <!-- ITEMS TABLE -->
            <Table id="itemTable">

                <columns>
                    <Column><Text text="Item Number"/></Column>
                    <Column><Text text="Material"/></Column>
                    <Column><Text text="Created By"/></Column>
                </columns>

                <items>
                    <ColumnListItem type="Active" press=".onSelectItem">
                        <cells>
                            <Text text="{ItemNo}"/>
                            <Text text="{Material}"/>
                            <Text text="{CreatedBy}"/>
                        </cells>
                    </ColumnListItem>
                </items>

            </Table>

        </content>

    </Page>

</mvc:View>
