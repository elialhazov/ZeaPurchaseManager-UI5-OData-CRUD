<mvc:View controllerName="zeaproject.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page id="detailPage"
          title="PO Item Details"
          showNavButton="true"
          navButtonPress=".onNavBack"
          class="detailPageStyle">

        <headerContent>
            <Button text="Edit Item" icon="sap-icon://edit" press=".onEditPress"/>
        </headerContent>

        <content>

            <!-- Card -->
            <VBox class="detailCard animatedCard">

                <HBox class="detailRow">
                    <Text class="detailLabel" text="PO Number:"/>
                    <Text class="detailValue" text="{PoNumber}"/>
                </HBox>

                <HBox class="detailRow">
                    <Text class="detailLabel" text="Item Number:"/>
                    <Text class="detailValue" text="{ItemNo}"/>
                </HBox>

                <HBox class="detailRow">
                    <Text class="detailLabel" text="Material:"/>
                    <Text class="detailValue" text="{Material}"/>
                </HBox>

                <HBox class="detailRow">
                    <Text class="detailLabel" text="Created By:"/>
                    <Text class="detailValue" text="{CreatedBy}"/>
                </HBox>

            </VBox>

        </content>

    </Page>
</mvc:View>
